<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="28dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/etContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <EditText
            android:id="@+id/editTextCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_code_hint"
            android:digits="0123456789ABCDEF "
            android:inputType="textCapCharacters"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/swRandColor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/single_list_height"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:checked="true"
        android:text="@string/rand_color_label"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/swSingleColor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/single_list_height"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:checked="true"
        android:text="@string/single_color_label"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/swBlink"
        android:layout_width="match_parent"
        android:layout_height="@dimen/single_list_height"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:checked="false"
        android:text="@string/blink_label"/>


    <android.support.v7.widget.SwitchCompat
        android:id="@+id/swAdvMode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/single_list_height"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:checked="false"
        android:text="@string/advanced_mode_label"/>

    <LinearLayout
        android:id="@+id/adv_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/genCode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_list_height"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:checked="true"
            android:text="@string/gen_code_label"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/code9x"
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_list_height"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:checked="true"
            android:text="@string/code9x_label"/>
    </LinearLayout>

</LinearLayout>
